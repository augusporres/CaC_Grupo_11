    <aside>
        <form action="/resultados-de-busqueda" method="get">
            <div>
                <label for="product-search">BUSCAR</label>
            </div>
    
            <p></p>
            <div>    
                <input type="text" id="product-search" name="q" placeholder="item o categoria" required>
            </div>
            <p></p>
            <div>
                <label for="sort-by">ORDENAR POR</label>
            </div>
            <p></p>
            <div>    
                <select id="sort-by" name="sort">
                    <option value="precio-desc">Mayor a Menor</option>
                    <option value="relevancia">Relevancia</option>
                    <option value="precio-asc">Menor a Mayor</option>
                    <option value="nombre-asc">Nombre (A a Z)</option>
                    <option value="nombre-desc">Nombre (Z a A)</option>
                </select>
            </div>
            <p></p>
            <div>
                <label for="price-min">PRECIO</label>
            </div>
            <p></p>
            <div>    
                <label>MIN</label>
                <input type="number" id="price-min" name="min_price" min="0" step="0.01">
                       
                <label> - Max</label>
                <input type="number" id="price-max" name="max_price" min="0" step="0.01">
            </div>
            <p></p>
            <div>
                <label>FILTRAR</label>
            </div>
            <p></p>
            <div>    
                <input type="checkbox" id="new" name="filter" value="nuevos">
                <label for="new">NUEVOS</label>
                <P></P> 
                <input type="checkbox" id="offers" name="filter" value="ofertas">
                <label for="offers">OFERTAS</label>
                <p></p>  
                <input type="checkbox" id="special-edition" name="filter" value="edicion-especial">
                <label for="special-edition">EDICION ESPECIAL</label>
                <p></p>
                <input type="checkbox" id="favorites" name="filter" value="favoritos">
                <label for="favorites">FAVORITOS</label>
            </div>
        </form>
    </aside> 
    
