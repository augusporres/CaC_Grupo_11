<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./head.ejs'); %>
    </head>
<body id="register">
    <!-- INICIO HEADER -->
    <header>
        <%- include('./header_auth.ejs'); %>
    </header>
    <!-- FIN DE HEADER -->
    <section class="main-content">
        <div id="main" class="container_register">
            <form action="/auth/register" method="POST">
                <h2>CREA TU CUENTA</h2>
                <p class="subtitle">Completa el formulario para ser parte del mundo de los Funkos</p>
        
                <div class="credentials">
                    <div>
                        <label for="nombre" class="label" >Nombre:</label>
                    
                        <input type="text" id="nombre" class="red-underline" name="name" required><br>
                    </div>
                    
                    <div>
                        <label for="apellido" class="label">Apellido:</label>
                    
                        <input type="text" id="apellido" class="red-underline" name="lastname" required><br>
                    </div>
        
                    <div>
                        <label for="correo" class="label">Correo Electrónico:</label>
                    
                        <input type="email" id="correo"  class="red-underline" name="usermail" required><br>
                    </div>
        
        
                    <div>
                        <label for="clave1" class="label">Contraseña:</label>
                    
                        <input type="password" id="clave1" class="red-underline" name="password" required><br><br>
                    </div>
        
                    <div>
                        <label for="clave2" class="label">Repita contraseña:</label>
                    
                        <input type="password" id="clave2" name="password" class="red-underline" required><br><br>
                    </div>
                </div>
        
                <div class="register-div">
                    
                        <input class="btn" type="submit" value="Registrarse">
                    
                    
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="terminos" name="terminos" required>
                            <label class="form-check-label" for="terminos">Acepto <a href="reg_terminos.html">Terminos y condiciones</a></label>
                        </div>
                    
        
                </div>
            </form>
        </div>
        </section>
    <!--FIN MAIN-->
    <footer class="footer">
        <%- include('./footer_auth.ejs'); %>
    </footer>
    <script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>
</body>
</html>