<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./head.ejs'); %>
    </head>
<body id="edit">
    <!-- INICIO HEADER -->
    <header>
        <%- include('./header_auth.ejs'); %>
    </header>
    <!-- FIN DE HEADER -->
    
    <section>
        <h2>EDITAR ITEM</h2>
        <form
            action="/admin/edit/<%= producto.product_id %>"
            method="POST"
        >
            <div class="choice">
                <div>
                    <label for="selectCategoria">
                        <span class="texto_desc">Categoría:</span>
                    </label>
                    <select id="selectCategoria" name="category", type="number">
                        <% categorias.forEach(function(categoria) { %>
                            <option value="<%= categoria.category_id %>"><%= categoria.category_name %></option>
                        <% }); %>
                    </select>
                </div>

                <div>
                    <label for="selectLicencia">
                        <span>Licencia:</span>
                    </label>
                    <select id="selectLicencia" name="licence", type="number">
                        <% licencias.forEach(function(licencia) { %>
                            <option value="<%= licencia.licence_id %>"><%= licencia.licence_name %></option>
                        <% }); %>
                    </select>
                </div>
            </div>
            <div class="nombre_prod">
                <label for="inputNombreProd" class="texto_desc">Nombre del producto:</label>
                <input id="inputNombreProd" type="text" class="red-underline" name="product_name" value="<%= producto.product_name %>">
            </div>

            <textarea name="description" id="textarea" cols="70"
                rows="7"><%= producto.product_description %></textarea>

            <div class="descripcion_prod">
                <div>
                    <label for="skuProd" class="texto_desc">SKU:</label>
                    <input id="skuProd" class="red-underline" name="sku" type="text" value="<%= producto.sku %>">
                </div>
                <div>
                    <label for="precioProd" class="texto_desc">Precio:</label>
                    <input id="precioProd" class="red-underline" name ="price" type="number" value="<%= producto.price %>">
                </div>
                <div>
                    <label for="stock" class="texto_desc">Stock:</label>
                    <input id="stock" class="red-underline" name="stock" type="number" value="<%= producto.stock %>">
                </div>
            </div>

            <div class="descuento">
                <div>
                    <label for="descProd" class="texto_desc">Descuento:</label>
                    <input id="descProd" class="red-underline" name="discount" type="number" value="<%= producto.discount %>">
                </div>

                <label for="cuotasProd">
                    <span class="texto_desc">Cuotas:</span>
                </label>
                <select id="cuotasProd" name="due" type="number">
                    <option value="1">1 Cuota sin interés</option>
                    <option value="3">3 Cuotas sin interés</option>
                    <option value="6">6 Cuotas sin interés</option>
                    <option value="12">12 Cuotas sin interés</option>
                </select>
            </div>
            <div class="carga_archivo">
                <label for="selecImg" class="texto_desc">Imágenes:</label>
                <input id="selecImg" type="file" name="img" multiple>
            </div>
            <div class="imgs">
                <div>
                    <img src="<%= producto.image_front %>" class="red-underline-fina" alt="">
                    <p class="sub-tt">Frente</p>
                </div>
                <div>
                    <img src="<%= producto.image_back %>" class="red-underline-fina" alt="">
                    <p class="sub-tt">Dorso</p>
                </div>
            </div>

            <button type="submit" class="modificar-button">Modificar Producto</button>
        </form>
    </section>
    <!--FIN MAIN-->
    <footer class="footer">
        <%- include('./footer_auth.ejs'); %>
    </footer>
    <script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>
</body>
</html>